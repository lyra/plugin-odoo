<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="payment.payment_acquirer_lyra" model="payment.acquirer">
            <field name="name">Lyra</field>
            <field name="image" type="base64" file="payment_lyra/static/src/img/lyra_logo.png" />
            <field name="provider">lyra</field>
            <field name="company_id" ref="base.main_company" />
            <field name="view_template_id" ref="lyra_acquirer_button" />
            <field name="environment">test</field>
            <field name="pre_msg"><![CDATA[<p>You will be redirected to the Lyra website after clicking on the payment button.</p>]]></field>
            <field name="lyra_available_languages"></field>
            <field name="lyra_capture_delay"></field>
            <field name="lyra_validation_mode"> </field>
            <field name="lyra_payment_cards"></field>
            <field name="lyra_threeds_min_amount"></field>
            <field name="lyra_redirect_enabled">0</field>
            <field name="lyra_redirect_success_timeout">5</field>
            <field name="lyra_redirect_error_timeout">5</field>
            <field name="lyra_return_mode">GET</field>

            <field name="description" type="html">
                <p>
                    A payment gateway to accept online payments via credit cards and PayPal.
                </p>
                <ul class="list-inline">
                    <li><i class="fa fa-check"/>Online Payment</li>
                    <li><i class="fa fa-check" />eCommerce</li>
                </ul>
            </field>
        </record>
    </data>
</odoo>