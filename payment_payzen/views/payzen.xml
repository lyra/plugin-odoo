<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="payzen_acquirer_button">
        <form t-if="acquirer.payzen_websitekey" t-att-action="tx_url" method="post" target="_self">
            <input type="hidden" name="vads_site_id" t-att-value="tx_values['payzen_vads_site_id']"/>
            <input type="hidden" name="vads_amount" t-att-value="tx_values['payzen_vads_amount'] or '0.0'"/>
            <input type="hidden" name="vads_currency" t-att-value="tx_values['payzen_vads_currency']"/>
            <input type="hidden" name="vads_trans_date" t-att-value="tx_values['payzen_vads_trans_date']"/>
            <input type="hidden" name="vads_trans_id" t-att-value="tx_values['payzen_vads_trans_id']"/>

            <input type="hidden" name="vads_ctx_mode" t-att-value="tx_values['payzen_vads_ctx_mode']"/>
            <input type="hidden" name="vads_page_action" t-att-value="tx_values['payzen_vads_page_action']"/>
            <input type="hidden" name="vads_action_mode" t-att-value="tx_values['payzen_vads_action_mode']"/>
            <input type="hidden" name="vads_payment_config" t-att-value="tx_values['payzen_vads_payment_config']"/>
            <input type="hidden" name="vads_version" t-att-value="tx_values['payzen_vads_version']"/>
            <input type="hidden" name="vads_return_mode" t-att-value="tx_values['payzen_vads_return_mode']"/>
            <input type="hidden" name="vads_order_id" t-att-value="tx_values['payzen_vads_order_id']"/>
            <input type="hidden" name="signature" t-att-value="tx_values['payzen_signature']"/>

            <!-- customer info -->
            <input type="hidden" name="vads_cust_name" t-att-value="tx_values['payzen_vads_cust_name']"/>
            <input type="hidden" name="vads_cust_first_name" t-att-value="tx_values['payzen_vads_cust_first_name']"/>
            <input type="hidden" name="vads_cust_last_name" t-att-value="tx_values['payzen_vads_cust_last_name']"/>
            <input type="hidden" name="vads_cust_address" t-att-value="tx_values['payzen_vads_cust_address']"/>
            <input type="hidden" name="vads_cust_zip" t-att-value="tx_values['payzen_vads_cust_zip']"/>
            <input type="hidden" name="vads_cust_city" t-att-value="tx_values['payzen_vads_cust_city']"/>
            <input type="hidden" name="vads_cust_state" t-att-value="tx_values['payzen_vads_cust_state']"/>
            <input type="hidden" name="vads_cust_country" t-att-value="tx_values['payzen_vads_cust_country']"/>
            <input type="hidden" name="vads_cust_email" t-att-value="tx_values['payzen_vads_cust_email']"/>
            <input type="hidden" name="vads_cust_phone" t-att-value="tx_values['payzen_vads_cust_phone']"/>
            <!-- Shipping info
                                <input type="hidden" name="vads_ship_to_name" t-att-value="tx_values['payzen_vads_ship_to_name']"/>
                                <input type="hidden" name="vads_ship_to_street" t-att-value="tx_values['payzen_vads_ship_to_street']"/>
                                <input type="hidden" name="vads_ship_to_city" t-att-value="tx_values['payzen_vads_ship_to_city']"/>
                                <input type="hidden" name="vads_ship_to_zip" t-att-value="tx_values['payzen_vads_ship_to_zip']"/>
                                <input type="hidden" name="vads_ship_to_state" t-att-value="tx_values['payzen_vads_ship_to_state']"/>
                                <input type="hidden" name="vads_ship_to_phone_num" t-att-value="tx_values['payzen_vads_ship_to_phone_num']"/>
 -->

            <!-- URLs --> 
            <input type='hidden' name='vads_url_return' t-att-value="tx_values.get('payzen_vads_url_return')"/>

            <!-- submit -->
            <button type="submit" width="100px"
                t-att-class="submit_class">
                <img t-if="not submit_txt" src="/payment_payzen/static/src/img/payzen_icon.png"/>
                <span t-if="submit_txt"><t t-esc="submit_txt"/> <span class="fa fa-long-arrow-right"/></span>
            </button>
        </form>
    </template>
</odoo>
